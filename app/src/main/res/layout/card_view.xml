<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/card_view_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_home"/>
            
            <LinearLayout
                android:id="@+id/card_view_linearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/card_view_image"
                android:orientation="vertical">
                
                <TextView
                    android:id="@+id/card_view_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House Name"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/card_view_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type of property..."
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/card_view_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:drawableStart="@drawable/colones_symbol"
                android:text="Precio"/>

        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>